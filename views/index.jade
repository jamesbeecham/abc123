block content
	div(data-role='page' data-theme='a')
		div(data-role='header')
			h1 Welcome
			p Search below to send notification
		div(data-role='content')
			form(action='/search',method='post')
				div(data-role='fieldcontain')
					fieldset(data-role='controlgroup')
						label(for='unit') unit
							input(id='unitSubmit',type='tel',value='',placeholder='Enter Unit Number..',name='unitSubmit')
				div(data-role='fieldcontain')   
					input(type='submit',value='Search',data-transition='fade', data-theme='c')
				

			div(id="pickup")
				a(href='/pickup',data-role='button',data-corners='true',data-shadows='true', data-wrapperels='span', data-icon='null', data-iconpos='null', data-iconshadow='true', data-theme='c', class='ui-btn ui-shadow ui-btn-corner-all ui-submit ui-btn-up-c') Pickup

		div(data-role='footer')
			h4 Call 512-587-0784 for help
